
#include <SPI.h>
#include <Wire.h>
#include <Adafruit_GFX.h>
#include <Adafruit_SSD1306.h>
#define OLED_MOSI   9
#define OLED_CLK   10
#define OLED_DC    11
#define OLED_CS    12
#define OLED_RESET 13
Adafruit_SSD1306 display(OLED_MOSI, OLED_CLK, OLED_DC, OLED_RESET, OLED_CS);
int gaveHeatWarning = false;
int gaveExtremeHeatWarning = false;
int gaveColdWarning = false;
int gaveExtremeColdWarning = false;
void setup() {
  display.begin(SSD1306_SWITCHCAPVCC);
  display.clearDisplay();
  display.display();
  display.setTextColor(WHITE);
}

void loop() {
  
}

void warn(int type) {
if (type == HEAT) {
gaveHeatWarning = true;
display.drawRect(0, 0, 128, 64, 255);
display.drawLine(0, 15, 128, 15, 255);
for (int x = 0; x <= 1000; x += 5) {
tone(1, x, 10);
}
for (int x = 0; x <= 1000; x += 5) {
tone(1, x, 10);
}
for (int x = 0; x <= 1000; x += 5) {
tone(1, x, 10);
}
delay(3000);
display.clearDisplay();
display.display();
}
}

