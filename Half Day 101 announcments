void playAnn(const char *text, int txtEnd, int color) {
  matrix.clear();
  matrix.setTextColor(color);
  matrix.setTextWrap(false);
  matrix.setCursor(16, 1);
  matrix.print(text);
  for (int x = 16; x >= txtEnd; x--) {
    matrix.clear();
    matrix.print(text);
    matrix.setCursor(x, 1);
    delay(50);
  }
}
